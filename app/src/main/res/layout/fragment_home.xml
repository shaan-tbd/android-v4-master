<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp50">
        <ImageView
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:src="@drawable/circle_yellow"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@drawable/ic_add"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/grey1"
        android:layout_centerInParent="true"
        android:text="@string/welcome_to_plano"
        android:textSize="@dimen/sp14" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:gravity="center"
        android:textColor="@color/grey1"
        android:text="@string/add_a_child_s_profile_to_setup_the_controls_and_start_the_child_mode_in_this_device_or_any_other_device_to_start_monitoring_the_child_s_activities"
        android:textSize="@dimen/sp14" />
    <TextView
        android:id="@+id/tv_child_activity_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:padding="@dimen/dp10"
        android:gravity="center"
        android:background="@drawable/rect_more_curve_yellow"
        android:backgroundTint="@color/grey"
        android:textColor="@color/grey1"
        android:text="@string/child_s_activity_report"
        android:textSize="@dimen/sp14" />
</RelativeLayout>